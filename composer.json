{
    "name": "vanio/type-parser",
    "description": "Library for parsing property types defined using @var PHPDoc annotation",
    "keywords": ["type", "var", "annotation", "docblock", "parser", "type resolver"],
    "type": "library",
    "homepage": "https://github.com/vaniocz/type-parser",
    "license": "MIT",
    "authors": [
        {"name": "Marek Štípek", "email": "marek.stipek@vanio.cz"}
    ],
    "require": {
        "php": ">=7.0",
        "doctrine/annotations": "^1.2",
        "doctrine/cache": "^1.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.2",
        "consistence/coding-standard": "^0.10.1",
        "slevomat/coding-standard": "^1.0.5"
    },
    "autoload": {
        "psr-4": {"Vanio\\TypeParser\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": { "Vanio\\TypeParser\\Tests\\": "tests/" }
    },
    "scripts": {
        "test": "\"vendor/bin/phpunit\" & exit /b 0",
        "lint": "\"vendor/bin/phpcs\" --standard=ruleset.xml --extensions=php --ignore=tests/Fixtures/* --encoding=utf-8 -sp src tests & exit /b 0",
        "fix": "\"vendor/bin/phpcbf\" --standard=ruleset.xml --extensions=php --ignore=tests/Fixtures/* --encoding=utf-8 --no-patch -sp src tests & exit /b 0"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        }
    }
}
